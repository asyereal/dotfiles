bar {
	i3bar_command i3bar --transparency
	font pango:electroharmonix 10
    status_command i3status -c ~/.config/i3/i3status.conf
	position top
	#hidden_state hide
	#mode hide

	# disable clickin on ws buttons, peasants don't deserve
