		separator #ea00d9
		statusline #ffffff

		focused_workspace #121212 #080808 #11b7ff
		inactive_workspace #121212 #121212 #ea00d9
		active_workspace #121212 #090425 #ea00d9
		urgent_workspace #121212 #090425 #ffffff
	}
}
